#include <iostream>

int main() {
	int n, m;
	std::cout << "Enter the number of rows: ";
	std::cin >> n;
	std::cout << "Enter the number of columns: ";
	std::cin >> m;

	int** matrix = new int* [n];
	int min_even_count = m + 1;
	int min_even_row_index = 0;

	for (int i = 0; i < n; i++) {
		matrix[i] = new int[m];
		int even_count = 0;

		for (int j = 0; j < m; j++) {
			std::cout << "Enter element A" << i + 1 << j + 1 << ": ";
			std::cin >> matrix[i][j];
			if (matrix[i][j] % 2 == 0) {
				even_count++;
			}
		}

		if (even_count < min_even_count) {
			min_even_count = even_count;
			min_even_row_index = i;
		}
	}

	std::cout << "The row with the least even numbers is row " << min_even_row_index + 1 << std::endl;

	for (int j = 0; j < m; j++) {
		matrix[min_even_row_index][j] *= matrix[min_even_row_index][j];
	}

	std::cout << "Modified matrix:" << std::endl;
	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++) {
			std::cout << matrix[i][j] << " ";
		}
		std::cout << std::endl;
	}

	for (int i = 0; i < n; i++) {
		delete[] matrix[i];
	}
	delete[] matrix;

	return 0;
}
